@model UserProfileModel

<h2>Edit Profile</h2>

<form asp-action="EditProfileDetails" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Username">Username:</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Resume">Resume:</label>
        <textarea asp-for="Resume" class="form-control"></textarea>
        <span asp-validation-for="Resume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResumeFile">Resume:</label>
        <input type="file" asp-for="ResumeFile" class="form-control-file" />
        <span asp-validation-for="ResumeFile" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label asp-for="ProfilePhoto">ProfilePhotoUrl:</label>
        <input asp-for="ProfilePhoto" class="form-control" />
        <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
    </div>
    <h3>Address:</h3>
    <div class="form-group">
        <label asp-for="Address.City">City:</label>
        <input asp-for="Address.City" class="form-control" />
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.State">State:</label>
        <input asp-for="Address.State" class="form-control" />
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.Pincode">Pincode:</label>
        <input asp-for="Address.Pincode" class="form-control" />
        <span asp-validation-for="Address.Pincode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
